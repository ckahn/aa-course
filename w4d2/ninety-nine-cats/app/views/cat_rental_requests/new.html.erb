<h1>New Cat Rental Request</h1>

<form action="<%= cat_rental_requests_url %>" method="POST">
  <label name="cat-name">Cat Name</label>
  <select name="cat_rental_request[cat_id]" id="cat-name">
    <option disabled selected>Select a cat</option>
    <% @cats.each do |cat| %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label name="cat-rental-request-start">Start Date</label>
  <input type="date" id="cat-rental-request-start" name="cat_rental_request[start_date]">
  <br>

  <label name="cat-rental-request-end">End Date</label>
  <input type="date" id="cat-rental-request-end" name="cat_rental_request[end_date]">
  <br>

  <input type="submit" value="Submit request">
</form>
